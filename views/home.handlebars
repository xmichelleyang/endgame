<!-- Description: home.handlebars displays a user's mediciation for the current date,
		 along with a time for consumption.
-->

<html>
<head>
	{{>header}}
	<script src="/js/home.js"></script>
</head>
<body>

	<div class="center-container">
		<h1>
			<!-- Call today's date from home.js -->
			<span id="today-date"> </span>
			Medication
		</h1>

		<!-- <h3> Medications </h3> -->
		<div id="med-today" class="main-content"> </div>
	</div>

	<!-- Handle a case for other days than today -->
	<div id="day" style="display: none;">{{day}}</div>

	{{>footer}}
</body>

</html>
