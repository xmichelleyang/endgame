<!-- Description: addMed.handlebars displays a page which allows users to add medicine and all
		 its associated information into the database. This includes the medicine's name, description,
		 dosage, side effects, and consumption times.
-->

<html>

<head>
	{{>header}}
	<script src="js/newMed.js"></script>
</head>

<body>
	<div class="center-container">
		<h1 class="first">Add Medicine</h1>

		<div class="main-content">
			<div class="card bg-light mb-3">
				<h5 class="card-header">Name of Medication</h5>
				<div class="card-body">
					<input class="card-text form-control" id="medNameBox" placeholder="Medication Name" required>
				</div>
			</div>

			<div class="card bg-light mb-3">
				<h5 class="card-header">Description</h5>
				<div class="card-body">
					<input class="card-text big-text-box form-control " id="medDescBox" />
					<hr />
					<div class="center-container" ><button type="button" class="user-btn" id="autofillMed">Auto-import Description</button></div>
				</div>
			</div>

			<div class="card bg-light mb-3">
				<h5 class="card-header">Side Effects</h5>
				<div class="card-body">
					<input class="card-text big-text-box form-control " id="medSideEffectsBox" />
				</div>
			</div>

			<div class="card bg-light mb-3">
				<h5 class="card-header">Dosage</h5>
				<div class="card-body">
					<input class="card-text form-control " id="medDosageBox" required />
				</div>
			</div>


			<!-- <div class="addMedContainer"> -->
				<div class="card bg-light mb-3">
					<h5 class="card-header">Time</h5>
					<!-- <script id="handlebars-demo" type="text/x-handlebars-template"> -->
					<div class="card-body">
						<div class="weekday-header">
							<h5>Monday</h5>
							<div id="monTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeMon" class="form-control in-one-line">
								<button id="addToMon" class="user-btn  in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

							<hr>
							<h5>Tuesday</h5>
							<div id="tueTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeTue" class="form-control in-one-line">
								<button id="addToTue" class="user-btn in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

							<hr>
							<h5>Wednesday</h5>
							<div id="wedTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeWed" class="form-control in-one-line">
								<button id="addToWed" class="user-btn in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

							<hr>
							<h5>Thursday</h5>
							<div id="thuTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeThu" class="form-control in-one-line">
								<button id="addToThu" class="user-btn in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

							<hr>
							<h5>Friday</h5>
							<div id="friTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeFri" class="form-control in-one-line">
								<button id="addToFri" class="user-btn in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

							<hr>
							<h5>Saturday</h5>
							<div id="satTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeSat" class="form-control in-one-line">
								<button id="addToSat" class="user-btn in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

							<hr>
							<h5>Sunday</h5>
							<div id="sunTimes"> </div>
							<div class="one-line">
								<input type="time" id="medTimeSun" class="form-control in-one-line">
								<button id="addToSun" class="user-btn in-one-line" style="margin-bottom: 10px;">ADD</button>
							</div>

						</div>


					</div>
				</div>
			</div>

			<div class="center-container">
				<button id="addAll" class="btn btn-primary">SAVE</button>
			</div>

	</div>

	{{>footer}}
</body>

</html>
