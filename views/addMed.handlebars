		<div class="card bg-light mb-3">
			<h5 class="card-header">Description</h5>
			<div class="card-body">
				<input class="card-text big-text-box" id="medDescBox" />
			</div>
		</div>

		<div class="card bg-light mb-3">
			<h5 class="card-header">Side Effects</h5>
			<div class="card-body">
				<input class="card-text big-text-box" id="medSideEffectsBox" />
			</div>
		</div>


		<div class="card bg-light mb-3">
			<h5 class="card-header">Dosage</h5>
			<div class="card-body">
				<input class="card-text" id="medDosageBox" />
			</div>
		</div>

		<p>Dosage	</p>
		<input  id="medDosageBox" type="text" placeholder="" />

		<button type="button" id="addNewMed">Add</button>
	</div>


	<div id="footer"></div>
</body>

