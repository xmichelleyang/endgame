<html>

<head>

	{{>header}}
	<!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script> -->
	<script src="js/newMed.js"></script>
</head>

<body>
	<div class="center-container">
		<h1>Add New Medicine</h1>

		<div class="card bg-light mb-3">
			<h5 class="card-header">Name of Medication</h5>
			<div class="card-body">
				<input class="card-text" id="medNameBox" />
			</div>
		</div>



		<div class="card bg-light mb-3" style="width: 20%;">
			<h5 class="card-header">Time</h5>
			<div class="card-body">
				<div class="weekday-header">
					<div id="addMedDay" class="left-align" style="padding-left: 5%;">Sunday</div>
					<a class="right-align clickable" data-toggle="collapse" href="#collapseDay" role="button" aria-expanded="false">+</a>
				</div> <br>
				<div class="collapse" id="collapseDay">
					<div class="input-group">
						<span class="input-group-button" style="text-align: center; padding:5%;">
							<input id="medTimeBox" type="text" placeholder="12:00" style="width: 50%;">
							<input id="medTimeBox2" type="checkbox"> AM
							<input id="	medTimeBox3" type="checkbox"> PM
						</span>
					</div>
				</div>
			</div>
		</div>

		<div class="card bg-light mb-3">
			<h5 class="card-header">Description</h5>
			<div class="card-body">
				<input class="card-text big-text-box" id="medDescBox" />
				<hr />
				<!-- <label><input type="checkbox" />
					Auto import description?
				</label> -->
				<button type="button" id="autofillMed">Auto-import Description</button>
			</div>
		</div>

		<div class="card bg-light mb-3">
			<h5 class="card-header">Side Effects</h5>
			<div class="card-body">
				<input class="card-text big-text-box" id="medSideEffectsBox" />
			</div>
		</div>


		<div class="card bg-light mb-3">
			<h5 class="card-header">Dosage</h5>
			<div class="card-body">
				<input class="card-text" id="medDosageBox" />
			</div>
		</div>


		<button type="button" id="addNewMed">Add</button>
	</div>


	<div id="footer"></div>
</body>

</html>
